<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your BMI Result</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-p1CmRNLcF3C1HPR2+0J5bkN6fv5tD3uqqr+3RMWLgDrGhHuCBZUR0uF1a3kXcSC3mYJLhXjp6bktnz+BYM5ujA=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>
<body class="bg-light">
  <header>
    <%- include('partials/navbar') %>
  </header>

  <main>
    <!-- Main Content -->
    <div class="container mt-5 fade-in">
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
          <div class="card shadow-sm result-card">
            <div class="card-header bg-success text-white">
              <h3 class="mb-0">Your BMI Result</h3>
            </div>
            <div class="card-body form-card">
              <p><strong>Age:</strong> <%= age %></p>
              <p><strong>Gender:</strong> <%= gender.charAt(0).toUpperCase() + gender.slice(1) %></p>
              <p><strong>Your BMI:</strong> <span class="fw-bold"><%= bmi %></span> (<%= interpretation %>)</p>

              <!-- Illustrative Image -->
              <div class="text-center my-4">
                <img src="/images/bmi-chart.png" alt="BMI Categories" class="img-fluid" style="max-width: 100%; height: auto;">
              </div>

              <div class="mt-4 d-flex justify-content-around">
                <a href="/bmicalculator" class="btn btn-primary" aria-label="Recalculate BMI">
                  <i class="fas fa-redo me-2"></i> Calculate Again
                </a>
                <a href="/" class="btn btn-secondary" aria-label="Go to Home">
                  <i class="fas fa-home me-2"></i> Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <%- include('partials/footer') %>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4F86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <!-- Font Awesome -->
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
    integrity="sha512-p1CmRNLcF3C1HPR2+0J5bkN6fv5tD3uqqr+3RMWLgDrGhHuCBZUR0uF1a3kXcSC3mYJLhXjp6bktnz+BYM5ujA=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <!-- Custom JavaScript -->
  <script src="/js/script.js"></script>
</body>
</html>
